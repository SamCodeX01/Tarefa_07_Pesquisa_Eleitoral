<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvGado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pesquisa_Estimulada">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:text="PESQUISA ESTIMULADA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgAnta"
        android:layout_width="181dp"
        android:layout_height="160dp"
        android:layout_marginStart="114dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAnta"
        app:srcCompat="@drawable/anta" />

    <ImageView
        android:id="@+id/imgJumento"
        android:layout_width="182dp"
        android:layout_height="138dp"
        android:layout_marginStart="113dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJumento"
        app:srcCompat="@drawable/jumento" />

    <ImageView
        android:id="@+id/imgGado"
        android:layout_width="178dp"
        android:layout_height="154dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="-1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ANTA2"
        app:srcCompat="@drawable/gado" />

    <TextView
        android:id="@+id/tvJumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="9dp"
        android:text="JUMENTO"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGado" />

    <TextView
        android:id="@+id/tvAnta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="184dp"
        android:layout_marginTop="21dp"
        android:text="ANTA"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/ANTA2"
        android:layout_width="45dp"
        android:layout_height="27dp"
        android:layout_marginStart="183dp"
        android:layout_marginTop="28dp"
        android:text="GADO"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAnta" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="Em quem você votaria para prefeito(a)?"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/botaoAvancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginTop="108dp"
        android:text="AVANÇAR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgJumento" />

</androidx.constraintlayout.widget.ConstraintLayout>